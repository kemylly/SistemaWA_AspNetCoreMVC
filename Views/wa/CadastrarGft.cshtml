@model desafio_mvc.DTO.GftDTO

<h2>Cadastro de uma nova sede</h2>
<hr/>

<form class="form-horizontal" asp-action="Salvar" asp-controller="Gft" method="POST" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" value="0">
    
    <label asp-for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Nome">
    <span asp-validation-for="Nome" class="text-danger"></span><br>

    <label asp-for="Endereco">Endere√ßo</label>
    <input type="text" asp-for="Endereco" class="form-control" placeholder="Rua das Magnolias, 707 - Jardim Rosas"><br>
    <span asp-validation-for="Endereco"></span>

    <label asp-for="Cidade">Cidade</label>
    <input type="text" asp-for="Cidade" class="form-control" placeholder="Francisco Morato"><br>
    <span asp-validation-for="Cidade"></span>

    <label asp-for="Estado">Estado</label>
    <select class="form-control" asp-for="Estado">
        <option value='AC'>AC</option>
        <option value='AL'>AL</option>
        <option value='AP'>AP</option>
        <option value='AM'>AM</option>
        <option value='BA'>BA</option>
        <option value='CE'>CE</option>
        <option value='DF'>DF</option>
        <option value='ES'>ES</option>
        <option value='GO'>GO</option>
        <option value='MA'>MA</option>
        <option value='MG'>MG</option>
        <option value='MS'>MS</option>
        <option value='MT'>MT</option>
        <option value='PA'>PA</option>
        <option value='PB'>PB</option>
        <option value='PE'>PE</option>
        <option value='PI'>PI</option>
        <option value='PR'>PR</option>
        <option value='RJ'>RJ</option>
        <option value='RO'>RO</option>
        <option value='RN'>RN</option>
        <option value='RR'>RR</option>
        <option value='RS'>RS</option>
        <option value='SC'>SC</option>
        <option value='SE'>SE</option>
        <option value='SP'>SP</option>
        <option value='TO'>TO</option>
    </select>
    <span asp-validation-for="Estado"></span>

    <label asp-for="Cep">CEP</label>
    <input type="text" asp-for="Cep" class="form-control" placeholder="07951-000"><br>
    <span asp-validation-for="Cep"></span>

    <label asp-for="Telefone">Telefone</label>
    <input type="text" asp-for="Telefone" class="form-control" placeholder="4489-6031">
    <span asp-validation-for="Telefone" class="text-danger"></span><br>

    <label asp-for="Foto">Foto</label>
    <input type="file" asp-for="Foto" class="form-control-file">
    <span asp-validation-for="Foto" class="text-danger"></span><br>

    @* <label asp-for="Foto" class="control-label"></label>
        <div class="custom-file">
            <input asp-for="Foto" class="custom-file-input" id="customFile">
            <label class="custom-file-label" for="customFile">Escolha a imagem</label>
    </div>
    <span asp-validation-for="Foto"></span> *@
    <br>
    <button class="btn btn-success">Cadastrar</button>
</form> 
<br/>
<a asp-action="Gft" asp-controller="wa" class="btn btn-dark">Voltar</a>