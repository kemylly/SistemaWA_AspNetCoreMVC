@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<div class="tex-center">
    <h1>@ViewData["Title"]</h1>
</div>


<div class="row">
    <div class="col-md-4 text-centar">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Crie uma nova conta</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Senha</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Confirmar senha</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Nome completo</p>
                <input asp-for="Input.NomeCompleto" class="form-control" />
                <span asp-validation-for="Input.NomeCompleto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Tipo</p>
                <select asp-for="Input.Tipo" class="custom-select mr-sm-2">
                      <option value="Comum">Comun</option>
                      <option value="Master">Admin</option>
              </select>
                <span asp-validation-for="Input.Tipo" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
    </div>
